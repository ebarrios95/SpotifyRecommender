#:import Window kivy.core.window.Window
#:import utils kivy.utils


ScreenManager:
    rootScreen:
<rootScreen>:
    id:main
    name:'main'
    bg_color: (1,1,1,.3)
    highlight_color1jbsidis: [0,0,0,0]
    highlight_color2jbsidis: (0,0,0,.3)
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#65d36e')
        Rectangle:
            size: self.size
            pos: self.pos
            #source:"libs/Images/create-art-using-the-turtle-module-of-python.png.jpeg"
    MDCard:
        size_hint: None, None
        size: 800, 1000
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 2
        padding: 25
        spacing: 25
        orientation: 'vertical'
        MDTopAppBar:
            title:"Spotify Recommend Songs"
            pos_hint: {"top":1}
            elevation:0
            md_bg_color:utils.get_color_from_hex('#6e65d3')
            specific_text_color: [1,1,1,1]
            left_action_items:[["libs/Images/Spotify_icon.svg.png"]]
        Label:
        MDTextField:
            id:playlist_uri
            hint_text:"Enter Playlist URI"
            helper_text:"copy URI in Spotify while holding down option"
            helper_text_mode: "on_focus"
            icon_right: "playlist-music"
            pos_hint:{"center_x":0.5}
            width:300
        MDTextField:
            id: num_songs
            hint_text:"Enter Number of Songs you Want!"
            #helper_text:"copy URI while holding down option"
            helper_text_mode: "on_focus"
            pos_hint:{"center_x":0.5}
            input_filter: 'int'
            icon_right:"music-note-eighth"
            width:300
        MDTextField:
            id: playlist_name
            hint_text:"Give your playlist a name"
            #helper_text:"copy URI while holding down option"
            helper_text_mode: "on_focus"
            pos_hint:{"center_x":0.5}
            icon_right:"emoticon-cool-outline"
            width:300
        Label:
        MDFloatingActionButton:
            icon:"database-search"
            md_bg_color: utils.get_color_from_hex('#6e65d3')
            pos_hint:{'center_x':0.5, 'center_y':0.1}
            on_release: 
                root.runApp()
#GUI for pop window
<p>:
    Label: 
        text: "Complete! Go check out your new playlist"
        size_hint: 0.4, .2
        pos_hint : {"x" : 0.3, "top" : 0.8}
